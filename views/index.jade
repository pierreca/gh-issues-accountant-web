extends layout
block content
   h1 #{title}
   br

   table.table.table-striped.table-bordered
     tr
       td Repository Name
       td Total
       td Date
     if (typeof reports === "undefined")
       tr
         td
     else
       each report in reports
         tr
           td #{report.name}
           td #{report.total}
           - var date  = new Date(report.at);
           - var day   = date.getDate();
           - var month = date.getMonth() + 1;
           - var year  = date.getFullYear();
           td #{month + "/" + day + "/" + year}
